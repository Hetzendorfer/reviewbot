# GitHub App
GITHUB_APP_ID=              # Numeric App ID
GITHUB_APP_SLUG=            # App name in URL (e.g., "my-reviewbot")
GITHUB_PRIVATE_KEY=         # Base64 encoded .pem content
GITHUB_WEBHOOK_SECRET=
GITHUB_CLIENT_ID=           # OAuth Client ID (starts with Iv1.)
GITHUB_CLIENT_SECRET=       # OAuth Client Secret

# Database
DATABASE_URL=postgres://reviewbot:reviewbot@localhost:5432/reviewbot
POSTGRES_PASSWORD=reviewbot

# Encryption (generate with: openssl rand -hex 32)
ENCRYPTION_KEY=

# Session (generate with: openssl rand -base64 32)
SESSION_SECRET=

# Public URL (for OAuth callbacks)
BASE_URL=http://localhost:3000

# Server
PORT=3000
HOST=0.0.0.0

# Logging
LOG_LEVEL=info
